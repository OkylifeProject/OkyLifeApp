<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#fff"
        >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" android:layout_gravity="center_horizontal"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:orientation="vertical"
                  style="@style/layoutStyle">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                >
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="#fff"
                      android:textSize="15dp"
                      android:hint="Titulo"
                      android:gravity="center"
                      android:alpha="@string/alpha"
                      android:id="@+id/sport_title"
                    />
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="3"
                      android:background="#fff"
                      android:textSize="15dp"
                      android:hint="Descripcion/Comentario"
                      android:gravity="center"
                      android:alpha="@string/alpha"
                      android:layout_marginTop="10dp"
                      android:id="@+id/sport_description"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                >
            //Mapa de Google Maps con Recorrido Realizado
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="1dp"

                      android:orientation="vertical"
                      style="@style/layoutStyle">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duracion"
                    android:id="@+id/textView1"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#fff"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:alpha="@string/alpha"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:id="@+id/textDuration"
                    android:textSize="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#fff"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:alpha="@string/alpha"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      style="@style/layoutStyle">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calorias"
                            android:id="@+id/textView3"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 cal"
                            android:id="@+id/textCalories"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="10dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distancia"
                            android:id="@+id/textView5"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 0 Km"
                            android:id="@+id/textDistance"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="10dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Velocidad"
                            android:id="@+id/textView7"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 0 Km/h"
                            android:id="@+id/textVelocity"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp">
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ritmo"
                            android:id="@+id/textView9"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00 min/Km"
                            android:id="@+id/textRhythm"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="10dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Objetivo"
                            android:id="@+id/textView11"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 0 Km"
                            android:id="@+id/textObjective"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="85dp" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="10dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hidratacion"
                            android:id="@+id/textView13"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 0.00 Lt"
                            android:id="@+id/textHydration"
                            android:textSize="12dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
            >
        <Button
                android:id="@+id/btnAccept"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Aceptar"
                style="@style/btnStyleGenoa"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:onClick="saveSportActivity"/>
        <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cancelar"
                style="@style/btnStyleGenoa"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:onClick="renderDialogCancelConfirmation"/>
    </LinearLayout>
</LinearLayout>
