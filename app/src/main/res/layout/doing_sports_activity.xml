<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#fff"
>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Que quieres Hacer?"
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:orientation="vertical"
                  style="@style/layoutStyle">
        <Spinner
                android:id="@+id/sportSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/prompt"
                android:background="#FFF"
                android:alpha="@string/alpha"
        />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:orientation="vertical"
        >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duracion"
                        android:id="@+id/textView2"
                        android:textSize="15dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#fff"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:alpha="@string/alpha"/>
                <Chronometer
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:textSize="45dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:alpha="@string/alpha"
                        android:id="@+id/chronometer" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginTop="5dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distancia"
                            android:id="@+id/textView3"
                            android:textSize="15dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00 m"
                            android:id="@+id/textDistanceSport"
                            android:textSize="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="5dp"
                              android:layout_marginTop="5dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Velocidad"
                            android:id="@+id/textView4"
                            android:textSize="15dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 0.00 m/s"
                            android:id="@+id/textVelocitySport"
                            android:textSize="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="left"
                              android:background="#fff"
                              android:layout_marginLeft="5dp"
                              android:layout_marginTop="5dp"
                              android:alpha="@string/alpha">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Objetivo"
                            android:id="@+id/textView5"
                            android:textSize="15dp"
                            android:layout_gravity="right"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:alpha="@string/alpha"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:orientation="horizontal">
                        <EditText android:layout_width="40dp"
                                  android:id="@+id/inputObjective"
                                  android:layout_height="wrap_content"
                                  android:background="#fff"
                                  android:textSize="20dp"
                                  android:text="0"
                                  android:gravity="center"
                                  android:inputType="date|datetime"
                                  android:maxLength="2"
                                  android:alpha="@string/alpha"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m"
                                android:id="@+id/textView6"
                                android:textSize="20dp"
                                android:layout_gravity="right"
                                android:background="#fff"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:gravity="right"
                                android:layout_below="@+id/linearLayout"
                                android:layout_centerHorizontal="true"
                                android:alpha="@string/alpha"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginLeft="5dp"
                          android:layout_marginTop="15dp"
            >
                <Button
                        android:id="@+id/btnPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/play"
                        android:gravity="center"
                        android:layout_marginRight="25dp"
                />
                <Button
                        android:id="@+id/btnStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stop"
                        android:layout_gravity="center_horizontal"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="10dp"
    >
        <Button
                android:id="@+id/btnSaveActivity"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Guardar"
                style="@style/btnStyleGenoa"
                android:layout_centerHorizontal="true"
                android:onClick="renderSaveSportActivityView"/>
    </LinearLayout>
</LinearLayout>