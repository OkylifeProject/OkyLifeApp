<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip"
>
    <ImageButton
            android:id="@+id/friend_image"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:paddingTop="5dp"/>
    <TextView
            android:layout_toRightOf="@+id/friend_image"
            android:padding="1dip"
            android:layout_marginTop="2dip"
            android:textColor="#308d9e"
            android:textStyle="bold"
            android:id="@+id/friend_name"
            android:text="Nombre del Amigo"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout android:layout_marginTop="2dip" android:layout_marginLeft="5dip"
                  android:layout_toRightOf="@+id/friend_image" android:layout_width="wrap_content"
                  android:layout_below="@+id/friend_name"
                  android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:textSize="15dp" android:layout_width="90dp" android:layout_height="wrap_content"
                android:text="AÃ±adir" android:id="@+id/add_friend_btn"/>
        <Button android:textSize="15dp" android:layout_width="90dp" android:layout_height="wrap_content"
                android:text="Mensaje" android:id="@+id/msn_btn"/>

    </LinearLayout>
</RelativeLayout>