<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip"
>
    <ImageButton
            android:id="@+id/msn_image"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/msn_image"
            android:background="#fff"/>
    <TextView
            android:layout_toRightOf="@+id/msn_image"
            android:padding="1dip"
            android:layout_marginTop="5dip"
            android:textColor="#308d9e"
            android:textStyle="bold"
            android:id="@+id/remitent_name"
            android:text="Nombre del Amigo"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@+id/remitent_name"
            android:layout_toRightOf="@+id/msn_image"
            android:padding="1dip"
            android:layout_marginTop="2dip"
            android:textColor="#308d9e"
            android:textStyle="bold"
            android:id="@+id/subject_name"
            android:text="Asunto del Mensaje"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_below="@+id/subject_name"
            android:layout_toRightOf="@+id/msn_image"
            android:padding="1dip"
            android:layout_marginTop="2dip"
            android:text="Eliminar"
            android:id="@+id/delete_msn_btn"
            android:textSize="18dp"
            android:layout_marginLeft="5dip"
            android:layout_width="90dp"
            android:layout_height="40dp"
            style="@style/btnStyleGenoa"/>

</RelativeLayout>