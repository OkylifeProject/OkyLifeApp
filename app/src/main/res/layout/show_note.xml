<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >
    <ImageButton
            android:id="@+id/image_person"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:paddingTop="5dp"/>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_person">
        <TextView
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/name_person"
                android:text="Nombre Persona"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_below="@+id/name_person"
                android:textColor="#000"
                android:textStyle="italic"
                android:id="@+id/date_note"
                android:text="Fecha Nota"
                android:textSize="10dp"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_below="@+id/date_note"
                android:padding="1dip"
                android:textSize="13dp"
                android:layout_marginTop="2dip"
                android:textColor="#000"
                android:textStyle="bold|italic"
                android:id="@+id/content_note"
                android:text="Contenido Nota"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
