<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip"
        >
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dip"
                    android:id="@+id/R1"
            >
        <TextView
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:id="@+id/name_ingredient"
                android:text="nombre ingrediente"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>
        <TextView
                android:layout_below="@+id/name_ingredient"
                android:textColor="#000"
                android:layout_marginLeft="5dip"
                android:id="@+id/description_ingredient"
                android:text="descripcion ingrediente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp" android:textStyle="bold|italic"/>
        <TextView
                android:layout_below="@+id/description_ingredient"
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#000"
                android:id="@+id/number_rates"
                android:text="numero de raciones"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="13dp"/>
        <TextView
                android:layout_below="@+id/number_rates"
                android:textColor="#308d9e"
                android:layout_marginLeft="5dip"
                android:id="@+id/type_rate"
                android:text="tipo de racion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp" android:textStyle="bold" android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dip"
                    android:id="@+id/R2"
                    android:layout_toRightOf="@+id/R1"
            >
        <TextView
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:id="@+id/l_calories_i"
                android:text="Calorias"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="12dp"/>
        <TextView
                android:layout_below="@+id/l_calories_i"
                android:textColor="#000"
                android:layout_marginLeft="5dip"
                android:id="@+id/cal_i"
                android:text="cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        <TextView
                android:layout_below="@+id/cal_i"
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:id="@+id/l_car_i"
                android:text="Carbohidratos"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="12dp"/>
        <TextView
                android:layout_below="@+id/l_car_i"
                android:textColor="#000"
                android:layout_marginLeft="5dip"
                android:id="@+id/car_i"
                android:text="car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dip"
                    android:id="@+id/R3"
                    android:layout_toRightOf="@+id/R2"
            >
        <TextView
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:id="@+id/l_fat_i"
                android:text="Grasas"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="12dp"/>
        <TextView
                android:layout_below="@+id/l_fat_i"
                android:textColor="#000"
                android:layout_marginLeft="5dip"
                android:id="@+id/fat_i"
                android:text="fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        <TextView
                android:layout_below="@+id/fat_i"
                android:padding="1dip"
                android:layout_marginTop="2dip"
                android:textColor="#308d9e"
                android:textStyle="bold"
                android:id="@+id/l_prot_i"
                android:text="Proteinas"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="12dp"/>
        <TextView
                android:layout_below="@+id/l_prot_i"
                android:textColor="#000"
                android:layout_marginLeft="5dip"
                android:id="@+id/prot_i"
                android:text="prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
    </RelativeLayout>
</RelativeLayout>